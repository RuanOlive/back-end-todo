generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://oliveira:SenhaSegura@localhost:5432/todo_app?schema=public"
}

model User {
  id           Int        @id @default(autoincrement())
  name         String
  email        String     @unique
  hashPassword String 
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  active       Boolean    @default(true)
  deletedAt    DateTime?
  tasks        Task[]
}

model Task {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  completed   Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

